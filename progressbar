<body>
  
 
<div id='container'></div>
 <script src="https://cdn.jsdelivr.net/npm/ractive"></script>
<script id="template" type='text/ractive'>
    
    <h1> Progress Bar.</h1>
    
    {{#each progressbars}}
        <div class="bg">
        {{#if value < 100}}
		
            <div class="progress-bar-fill" style="width: {{value/1}}%">
                <span class="progress-label ">{{value}}%</span>
            </div>
        {{/if}}

        {{#if value>=100}}
            <div class="progress-bar-fill-red " style="width: 100%">
                <span class="progress-label">{{value}}%</span>
            </div>
        {{/if}}
		
		 
		
		</div>
    {{/each}}

    <select value='{{selectedProgress}}'>
        <option selected disabled>Choose a Progressbar</option>
        {{#each progressbars :index}}
            <option value='{{index}}'>{{name}}</option>
        {{/each}}
    </select>

    {{#each bars}}
	
	
        <button disabled='{{selectedProgress != null}}' on-click='adjust(this)'>{{this > 0 ? '+' : ''}}{{this}}</button>
    {{/each}}
</script>
<script type='text/javascript'>
var ractive = new Ractive({
    el: document.body,
    template: '#template',
    data: {
        progressbars: [
            { name: 'first', value: 62 },
            { name: 'second', value: 45 },
			{ name: 'third', value: 62 }

           
        ],
        bars: [ +10, +38, -13, -18 ]
    },
    adjust: function ( d ) {
        var selected = this.get( 'selectedProgress' );
        if ( selected == null ) return;
        
        var keypath = 'progressbars[' + selected + '].value';
        this.add( keypath, d );
    }
});

</script>
 
</body>
</html>
